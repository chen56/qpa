// build阶段 配置
{
  "extends": "../../tsconfig.json",
  // **非常重要** mono项目依靠 references 告诉tsc子项目间的依赖关系
  "references": [
    {
      "path": "../core"
    },
  ],

  // 继承根目录的共享配置
  "compilerOptions": {
//    //必须设置 baseUrl，paths 是相对于 baseUrl 解析的
    "baseUrl": "./",
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}