{
  "name": "@pa/core",
  "version": "1.0.0",
  "description": "pa cli",

  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "index.d.ts",
  "files": ["dist"],

  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
   },

  "bun": {
    "resolve": {
      "extensions": [".tsx", ".ts", ".jsx", ".js"]
    }
  },

  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "bun": "./src/index.ts"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun build",
    "test": "bun test",
    "publish-packages": "bun publish --workspaces --if-present"
  },

  "devDependencies": {
    "@commander-js/extra-typings": "^13.1.0",
    "@types/node": "^22.15.3",
    "eslint": "^9.26.0",
    "jiti": "^2.4.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "keywords": [
    "pa",
    "cli"
  ],
  "author": "chen56",
  "dependencies": {
    "commander": "^13.1.0",
    "dotenv": "^16.5.0",
    "tencentcloud-sdk-nodejs": "^4.0.973"
  }
}