// build阶段 配置
{
  "extends": "../../tsconfig.base.json",
  // 继承根目录的共享配置
  "compilerOptions": {
    //    //必须设置 baseUrl，paths 是相对于 baseUrl 解析的
    "rootDir": ".",
    "outDir": "./dist",
    // 开发阶段坚决不要在子项目配置baseUrl,会导致ide无法跨项目重构
     "baseUrl": "./",
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "**/node_modules"
  ]

}