// build阶段 配置
{
  "extends": "../../tsconfig.base.json",
  // **非常重要** mono项目依靠 references 告诉tsc子项目间的依赖关系
  "references": [
    {  "path": "../core" },
    {  "path": "../cli" }
  ],

  // 继承根目录的共享配置
  "compilerOptions": {
    // 开发阶段坚决不要在子项目配置baseUrl,会导致ide无法跨项目重构
    //     "baseUrl": "./",
//    "rootDir": "./",
    // 开发阶段坚决不要在子项目配置baseUrl,会导致ide无法跨项目重构
    "baseUrl": "./",
    "outDir": "./dist",
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo",
    // paths基于baseUrl
    "paths": {
      "@qpa/*": ["../*/src"],
      "@qpa/core/spi": ["../core/src/spi"],
    },
  },

  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "./build",
    "./dist",
    "./node_modules",
  ],
}