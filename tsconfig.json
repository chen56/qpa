// build阶段 配置
{
  "extends": "./tsconfig.base.json",
  // **非常重要** mono项目依靠 references 告诉tsc子项目间的依赖关系
  "references": [
    {
      "path": "packages/core"
    },
    {
      "path": "packages/cli"
    },
    {
      "path": "packages/provider-tencentcloud"
    }
  ],
  // 继承根目录的共享配置
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./",
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "**/node_modules"
  ]
}